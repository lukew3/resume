    \begin{document}
\vspace*{-40pt}

    

%==== Profile ====%
\vspace*{-10pt}
\begin{center}
	{\Huge \scshape {<%= basics['name'] %>}}\\
	<%= basics['location']['address'] %> $\cdot$ <%= basics['email'] %> $\cdot$ <%= basics['phone'] %> $\cdot$ <%= basics['website'] %>\\
\end{center}

%==== Education ====%
\header{Education}
<% education.each do |school| %>
    \textbf{<%= school['institution'] %>}\hfill <%= school['location'] %>\\
    <%= school['studyType'] %> <%= school['area'] %> <%= school['gpa'] ? "\\textit{GPA: #{school['gpa']}}" : ''%>\hfill <%= school['startDate'] + ' - ' + school['endDate'] %>\\
    \vspace{2mm}
<% end %>

%==== Experience ====%
\header{Work Experience}
\vspace{1mm}

<% work.each do |job| %>
    \textbf{<%= job['company'] %>} \hfill <%= job['location'] %>\\
    \textit{<%= job['position'] %>} \hfill <%= job['startDate'] + ' - ' + job['endDate'] %>\\
    \vspace{-1mm}
    \begin{itemize} \itemsep 1pt
        <% job['highlights'].each do |highlight| %>
            \item <%= highlight %>
        <% end %>
    \end{itemize}
<% end %>

\header{Skills}
\begin{tabular}{ l l }
<% skills.each do |skill| %>
    <%= skill['name'] %>:   & <%= skill['keywords'].map{ |e| "#{e}"}.join(', ') %>  \\
<% end %>
\end{tabular}
\vspace{2mm}

\header{Projects}
<% projects.each do |project| %>
    {\textbf{<%= project['name'] %>}} {\sl <%= project['keywords'].map{ |e| "#{e}"}.join(', ') %>} \hfill <%= project['url'] %>\\
    <%= project['description'] %>\\
    \vspace*{2mm}
<% end %>

\ 
\end{document}